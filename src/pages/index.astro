---
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactForm from '../components/ContactForm.astro';
---

<BaseLayout title="Home" description="Static site built with Astro, Tailwind, and Netlify.">
  <main class="max-w-2xl mx-auto px-4 py-16">
    <h1 class="text-2xl font-bold mb-8">Cocon</h1>
    <p class="text-gray-600 mb-8">
      Astro + Tailwind + Netlify (hosting, CMS, forms). Ready for design tokens and components.
    </p>
    <section aria-labelledby="contact-heading">
      <h2 id="contact-heading" class="text-xl font-semibold mb-4">Contact (example form)</h2>
      <ContactForm />
    </section>
  </main>
</BaseLayout>
