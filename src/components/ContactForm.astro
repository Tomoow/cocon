---
/**
 * Example Netlify Form: accessible and spam-protected (honeypot).
 * Netlify parses forms at build time; keep name attribute and data-netlify="true".
 * Do not add client:load unless you need JS (e.g. custom validation); form works without it.
 */
---

<form
  name="contact"
  method="POST"
  data-netlify="true"
  data-netlify-honeypot="bot-field"
  class="flex flex-col gap-4 max-w-md"
  action="/thank-you"
>
  {/* Honeypot: hidden from users, bots fill it; Netlify rejects submissions with it set */}
  <p class="absolute -left-[9999px] w-px h-px overflow-hidden" aria-hidden="true">
    <label for="contact-bot">
      Don’t fill this out if you’re human: <input id="contact-bot" name="bot-field" type="text" tabindex="-1" autocomplete="off" />
    </label>
  </p>

  <div>
    <label for="contact-name" class="block text-sm font-medium mb-1">Name</label>
    <input
      id="contact-name"
      type="text"
      name="name"
      required
      autocomplete="name"
      class="w-full rounded border border-gray-300 px-3 py-2"
      aria-required="true"
    />
  </div>

  <div>
    <label for="contact-email" class="block text-sm font-medium mb-1">Email</label>
    <input
      id="contact-email"
      type="email"
      name="email"
      required
      autocomplete="email"
      class="w-full rounded border border-gray-300 px-3 py-2"
      aria-required="true"
    />
  </div>

  <div>
    <label for="contact-message" class="block text-sm font-medium mb-1">Message</label>
    <textarea
      id="contact-message"
      name="message"
      rows="4"
      required
      class="w-full rounded border border-gray-300 px-3 py-2"
      aria-required="true"
    />
  </div>

  <button type="submit" class="rounded bg-gray-900 text-white px-4 py-2 font-medium hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900">
    Send
  </button>
</form>
